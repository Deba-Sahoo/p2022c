</style>

<script>
  function ready(callback) {
    // in case the document is already rendered
    if (document.readyState != "loading") callback();
    // modern browsers
    else if (document.addEventListener)
      document.addEventListener("DOMContentLoaded", callback);
    // IE <= 8
    else
      document.attachEvent("onreadystatechange", function () {
        if (document.readyState == "complete") callback();
      });
  }

  ready(() => {
    let path = window.location.pathname;
    let nav_selector;

    switch (path) {
      case "/":
        nav_selector = "a.nav-item:nth-child(1)";
        break;
      case "/about":
        nav_selector = "a.nav-item:nth-child(2)";
        break;
      case "/whycet":
        nav_selector = "a.nav-item:nth-child(3)";
        break;
      case "/placement":
        nav_selector = "a.nav-item:nth-child(4)";
        break;
      case "/team":
        nav_selector = "a.nav-item:nth-child(5)";
        break;
      case "/contact":
        nav_selector = "a.nav-item:nth-child(6)";
        break;
    }

    console.log($(nav_selector).addClass("active_nav_link"));
  });
</script>
